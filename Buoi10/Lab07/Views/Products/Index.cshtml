@model List<Lab07.Data.Product>
@{
	ViewData["Title"] = "Index";
}

<h1>Danh sách</h1>
<table class="table table-bordered">
	<tr>
		<th>Tên</th>
		<th>Giá</th>
		<th>Hình</th>
		<th>Loại</th>
		<th>Nhà cung cấp</th>
		<td></td>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Name</td>
			<td>@item.UnitPrice.ToString("#,#00.00")</td>
			<td>
				<img src="~/Images/Products/@item.Image" alt="@item.Name" />
			</td>
			<td>@item.Category.Name</td>
			<td>@item.Supplier.Name</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Sửa</a>
				<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
			</td>
		</tr>
	}
</table>

