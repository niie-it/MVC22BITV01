@model Employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create Employee</h1>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger" />
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" />
        <span class="text-danger" asp-validation-for="Id"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeNo" class="control-label"></label>
        <input asp-for="EmployeeNo" class="form-control" />
        <span class="text-danger" asp-validation-for="EmployeeNo"></span>
    </div>
    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmEmail" class="control-label"></label>
        <input asp-for="ConfirmEmail" class="form-control" />
        <span class="text-danger" asp-validation-for="ConfirmEmail"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <button>Create new</button>
</form>
